@model IEnumerable<Company>

<div class=" container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Company List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp; Create New Company
            </a>
        </div>
    </div>
    <br/>
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Street Address</th>
                <th>City</th>
                <th>State</th>
                <th>Phone Number</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
@*                var data = obj.Id;
*@                <tr>

                    <td width="30%">
                        @obj.Name
                    </td>
                    <td width="10%">
                        @obj.streetAddress
                    </td>
                    <td width="10%">
                        @obj.City
                    </td>
                    <td width="30%">
                        @obj.State
                    </td>
                    <td width="10%">
                        @obj.PhoneNumber
                    </td>

                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Company" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                            <form asp-action="Delete" asp-controller="Company" method="post" asp-route-id="@obj.Id">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this?')"><i class="bi bi-trash-fill"></i>Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

